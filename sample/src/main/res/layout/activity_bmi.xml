<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="20dp">

  <org.js.cycle.android.sample.LabeledSlider
    android:id="@+id/labeled_slider_weight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <org.js.cycle.android.sample.LabeledSlider
    android:id="@+id/labeled_slider_height"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_toRightOf="@id/labeled_slider_weight"/>

  <TextView
    android:id="@+id/text_bmi"
    style="@style/TextAppearance.AppCompat.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/labeled_slider_weight"/>

</RelativeLayout>